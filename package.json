    "runtypes": "6.5.1",
    "zod": "3.17.3"
  },
  "devDependencies": {
    "@types/koa": "2.13.4",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "5.25.0",
    "@typescript-eslint/parser": "5.25.0",
    "ava": "4.2.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "nyc": "15.1.0",
    "openapi-types": "12.0.0",
    "prettier": "2.6.2",
    "ts-node": "10.8.0",
    "typescript": "4.6.4"
  },
  "ava": {
    "files": [
      "dist/**/__test__/*.spec.js"
    ],
    "require": [
      "./dist/__test__/beforeTests"
