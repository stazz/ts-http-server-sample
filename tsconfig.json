{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "lib": [
      "ES2021"
    ],
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noErrorTruncation": true
  },
  "include": [
    "src/**/*"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
}